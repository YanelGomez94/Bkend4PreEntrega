<link rel="stylesheet" href="css/index.css">
<header>
    <a href="/">Inicio</a>
    <h1>Gestionar usuarios</h1>
    <div></div>
</header>
<main>
    <div id="productsList">
        {{#each users}}
            <div style="margin-top: 20px;">
                <a onclick="deleteUser(`{{this.email}}`)" class="deleteUser">Eliminar</a>
                <div style="display: grid; place-content: center;">
                    <img src=`{{this.thumbnail}}` alt=`{{this.first_name}}` style="aspect-ratio: 1; width: 200px; object-fit: cover;"/>
                </div>
                <h2>{{this.first_name}}</h2>
                <h2>Rol {{this.role}}</h2>
                <p>Email {{this.email}}</p>
                <p>ID: {{this._id}}</p>
                <button style="height: 40px; width: 100%; border-Radius: 25px" onclick="swapRole('{{email}}')">Cambiar rol</button>
            </div>
        {{/each}}
    </div>
</main>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/viewUsers.js"></script>